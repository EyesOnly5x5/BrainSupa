<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="io.github.eyesonly5x5.MainActivity">

    <ImageView
        android:id="@+id/iView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-0dp"
        android:background="@drawable/hintergrund"
        android:gravity="center"
        android:src="@drawable/ic_brain" />

    <TextView
        android:id="@+id/Kopf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/title1"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:id="@+id/butty2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iView"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/SupaHirn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/title6"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SupraHirni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_below="@id/SupaHirn"
            android:text="@string/title7"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SupaMaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_below="@id/SupraHirni"
            android:text="@string/title8"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>